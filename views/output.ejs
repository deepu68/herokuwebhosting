<html>
  <style>
    body {
      background-image: url("water.jpg");
      background-repeat: no-repeat;
      background-attachment: fixed;
      background-size: cover;
    }
    table,
    th,
    td {
      border: 1px solid white;
      border-collapse: collapse;
      width: 30%;
      text-align: center;
      margin-left: auto;
      margin-right: auto;
      color: white;
    }
  </style>
  <body>
    <h2 style="text-align: center; color: white; font-size: 60px">
      Items Purchased
    </h2>
    <table class="center">
      <tr>
        <th>Item Name</th>
        <th>Imported</th>
        <th>Quantity</th>
        <th>Item Price</th>
      </tr>
      <% data.forEach((item)=>{%>
      <tr>
        <td><%=item.name%></td>
        <td><%=item.imported%></td>
        <td><%=item.quantity%></td>
        <td><%=item.price%></td>
      </tr>
      <%});%>
    </table>
    <br />
    <p style="text-align: center; font-size: 20px; color: white">
      Sales Tax =<%=tax%>
    </p>
    <p style="text-align: center; font-size: 20px; color: white">
      Total =<%=totalPrice%>
    </p>
    <a
      style="text-align: center; font-size: 20px; color: white"
      href="/newReceipt"
      >New Receipt</a
    >
  </body>
</html>
